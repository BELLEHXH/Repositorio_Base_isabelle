import csv

with open("dados.csv","r", encoding="utf-8") as arquivo:
    leitor = csv.DictReader(arquivo)
    alunos = list(leitor)

print("lista de alunos:")
for aluno in alunos:
    print(aluno["nome"])

print("\n alunos com nota >= 7:")
for aluno in alunos:
    if float(aluno["nota"]) >=7:
        print(aluno["nome"],"-",aluno["nota"])

notas = [float(aluno["nota"])for aluno in alunos]
media = sum(notas) / len(notas)
print(f"\n media da turma:{media:2f}")

novo_aluno = ["elisa","18","8.0"]
with open("dados.csv","a",encoding="utf-8",newline="") as arquivo:
     escritor = csv.writer(arquivo)
     escritor.writerow(novo_aluno)

print("\n novo aluno elisa adicionado ao arquivo com sucesso!")
